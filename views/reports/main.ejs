      <h1>Current Balance : <%= balance %> PKR </h1>
        <canvas id="myChart" width="400" height="200"> </canvas>
    
    </div>


<script>

  
    

  fetch('http://localhost:8000/reports/data').then(response => {return response.json();}).then((responseData) => {

// Replace with your actual data
    const ctx = document.getElementById('myChart').getContext('2d');
    const labels = ['Expense', 'Income'];
    const backgroundColor = ['#ff6384', '#5cb85c '];
    const data = [responseData.total_expense, responseData.total_income];

// Create the doughnut chart
const myChart = new Chart(ctx, {
  type: 'doughnut',
  data: {
    labels,
    datasets: [{
      label: 'Expense Tracking',
      data,
      backgroundColor,
    }],
  },
  options: {
    // Optional customizations
    title: {
      display: true,
      text: 'Custom Chart Title',
    },
    legend: {
      display: true,
      position: 'bottom',
    },
    // ...other options (e.g., animation, tooltips)
  },
});


  })
  .catch((error => console.log("Error caught in fetch api mr salman", error))); 
  






</script>
