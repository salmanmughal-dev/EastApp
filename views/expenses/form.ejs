    <form style="margin: 215px; margin-left: 560px;" action="/expenses/submit" method="POST">
        <div class="form-group row" style="width: 600px;">
          <label for="inputEmail3"  class="col-sm-2 col-form-label">Amount</label>
          <div class="col-sm-10">
            <input type="number" name="amount" class="form-control" id="inputEmail3" placeholder="Enter the amount of rupees">
          </div>

          <div class="col-sm-10 mt-4">
            <input type="text" name="source" class="form-control" id="inputEmail3" placeholder="Enter the source of income or expense">
          </div>
        </div>
       

        <fieldset class="form-group">
          <div class="row">
            <!-- <legend class="col-form-label col-sm-2 pt-0" style="font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">Type</legend> -->
            <div class="col-sm-10">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="expense" checked>
                <label style="margin-left: 30px; padding-top: 2px;" class="form-check-label" for="gridRadios1">
                    Expense </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="income">
                <label style="margin-left: 30px; padding-top: 2px;" class="form-check-label" for="gridRadios2">
                  Income
                </label>
              </div>

            

              <!-- DATE PICKING -->
              <div class="form-group">
                <div class="container" style="margin-top: 50px;"> 
                
             
                    <div id="datepicker" 
                         class="input-group date" 
                         data-date-format="mm-dd-yyyy"> 
                        <input name="dated" class="form-control" 
                               type="text" readonly /> 
                        <span class="input-group-addon"> 
                            <i class="glyphicon glyphicon-calendar"></i> 
                        </span> 
                    </div> 
                </div> 
    
              </div>
              

        <div class="form-group row" style="margin-top: 50px;">
          <div class="col-sm-10">
            <button type="submit" class="btn btn-success" style="width: 500px;"><i class="fa-solid fa-money-bill-transfer"></i> Transaction</button>
          </div>
        </div>
      </form>



